@{
    ViewData["Title"] = "SignUp";
}

@model SignUp

<div class="container-fluid w-50 flex-grow-1">
    <h1 class="text-capitalize text-center">SignUp</h1>
    <form method="post" asp-controller="SignUp" asp-action="SignUp" enctype="multipart/form-data" >
        <div asp-validation-summary="All">
            @{
                if (ViewData["valid"] != null)
                {
                   <h6 class="text-center text-danger mx-3">Invalid Credentials</h6>
                }
            }
        </div>
        <div class="mb-3">
            <label asp-for="@Model.file" class="form-label">Avatar File</label>
            <input asp-for="@Model.file" class="form-control">
        </div>
        <div class="mb-3">
            <label asp-for="Cred.Email" class="form-label">Email address</label>
            <input asp-for="Cred.Email" class="form-control" >
        </div>
        <div class="mb-3">
            <label asp-for="Cred.Password" class="form-label">Password</label>
            <input asp-for="Cred.Password" class="form-control">
        </div>
        <div class="mb-3">
            <label asp-for="Emp.FirstName" class="form-label">FirstName</label>
            <input asp-for="Emp.FirstName" class="form-control">
        </div>
        <div class="mb-3">
            <label asp-for="Emp.LastName" class="form-label">LirstName</label>
            <input asp-for="Emp.LastName" class="form-control">
        </div>
        <div class="mb-3">
            <label asp-for="Emp.Address" class="form-label">Address</label>
            <input asp-for="Emp.Address" class="form-control">
        </div>
        <div class="mb-3">
            <label asp-for="Emp.PhoneNo" class="form-label">Phone</label>
            <input asp-for="Emp.PhoneNo" class="form-control">
        </div>
        <div class="mb-3">
            <label asp-for="Emp.DateOfBirth" class="form-label">Date Of Birth</label>
            <input asp-for="Emp.DateOfBirth" class="form-control">
        </div>
        <div class="mb-3">
            <label asp-for="Emp.Age" class="form-label">Age</label>
            <input asp-for="Emp.Age" class="form-control">
        </div>
        <div class="mb-3">
            <label asp-for="Emp.Designation" class="form-label">Designation</label>
            <input asp-for="Emp.Designation" class="form-control">
        </div>
        <div class="mb-3">
            <label asp-for="Emp.BasicSalary" class="form-label">Salary</label>
            <input asp-for="Emp.BasicSalary" class="form-control">
        </div>
        <div class="mb-3">
            <label asp-for="Emp.FuelAllowence" class="form-label">Fuel Allowence</label>
                <input asp-for="Emp.FuelAllowence" class="form-control">
        </div>
        <div class="mb-3">
            <label asp-for="Emp.Housing" class="form-label">Housing</label>
            <input asp-for="Emp.Housing" class="form-control">
        </div>
        <div class="mb-3">
            <label asp-for="Emp.OverTimeHourlyRate" class="form-label">OverTimeRate</label>
            <input asp-for="Emp.OverTimeHourlyRate" class="form-control">
        </div>
        <div class="mb-3">
            <label asp-for="Emp.JoiningDate" class="form-label">Joining Date</label>
            <input asp-for="Emp.JoiningDate" class="form-control">
        </div>
        <div class=" = text-center w-100 mt-2">
        <button type="submit" class="btn btn-primary w-75">Add</button></div>
    </form>
</div>