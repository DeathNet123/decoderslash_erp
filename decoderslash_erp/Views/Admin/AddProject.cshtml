@{
    ViewData["Title"] = "Project Add";
}

@model ProjectUpload


<div class="container-fluid w-50 flex-grow-1">
    <h1 class="text-capitalize text-center">Project Form</h1>
    @{
        if(ViewContext.HttpContext.Session.GetString("DoneData") != null)
        {
            <h3 class="text-center text-secondary">Added</h3>
        }
        
    }
    <form method="post" asp-controller="Admin" asp-action="AddProject" enctype="multipart/form-data">
        <div asp-validation-summary="All">
        </div>
        <div class="mb-3">
            <label asp-for="file" class="form-label">Project File</label>
            <input asp-for="file" class="form-control" type = "file">
        </div>
        <div class="mb-3">
            <label asp-for="@Model.project.Name" class="form-label">Project Name</label>
            <input asp-for="@Model.project.Name" class="form-control">
        </div>
        <div class="mb-3">
            <label asp-for="project.StartDate" class="form-label">StartDate</label>
            <input asp-for="project.StartDate" class="form-control" required>
        </div>
        <div class="mb-3">
            <label asp-for="project.EndDate" class="form-label">EndDate</label>
            <input asp-for="project.EndDate" class="form-control" required>
        </div>
        <div class="mb-3">
            <label asp-for="project.ProjectManagerID" class="form-label">Project Manager ID</label>
            <input asp-for="project.ProjectManagerID" class="form-control" required>
        </div>
        <div class=" = text-center w-100 mt-2">
            <button type="submit" class="btn btn-primary w-75">Add</button>
        </div>
        
    </form>
</div>

