@{
    ViewData["Title"] = "Delete";
}
<h3 class="text-danger">@ViewData["response"]</h3>

<div class="container-fluid w-50 flex-grow-1">
    <h1 class="text-capitalize text-center">Delete Employee</h1>
    <form method="post" asp-controller="Admin" asp-action="DeleteEmployee">
        <div class="mb-3">
            <label class="form-label" name="id">Employee ID</label>
            <input type="number" class="form-control" required name="id">
        </div>
        <div class=" = text-center w-100 mt-2">
            <button type="submit" class="btn btn-primary w-75">Delete</button>
        </div>
    </form>
</div>

<div class="text-center w-100 mt-5"> <a type="submit" class="btn btn-primary w-75" asp-controller="EmployeeDashBoard" asp-action="Index">DashBoard</a></div>