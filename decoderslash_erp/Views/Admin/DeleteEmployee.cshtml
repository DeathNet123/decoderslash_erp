@{
    ViewData["Title"] = "Delete";
}
<h3 class="text-danger">@ViewData["response"]</h3>
<h1>Delete Employee</h1>

<form method="post" asp-controller="EmployeeDashBoard" asp-action="DeleteEmployee">
    <div class="row g-3 align-items-center mb-3 ml-5 mt-5">
      <div class="col-auto">
            <label for="delete_id" class="col-form-label">ID</label>
      </div>
      <div class="col-auto">
            <input type="number" id="delete_id" class="form-control" name="id" aria-describedby="delete_id">
      </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<div class="text-center w-100 mt-5"> <a type="submit" class="btn btn-primary w-75" asp-controller="EmployeeDashBoard" asp-action="Index">Go back to Home</a></div>