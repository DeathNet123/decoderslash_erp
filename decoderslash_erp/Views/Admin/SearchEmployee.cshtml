@{
    ViewData["Title"] = "Search";
}


<h3 class="text-center text-capitalize text-danger">@ViewData["response"]</h3>

<div class="container-fluid">
    <div class="container-fluid w-50 flex-grow-1">
        <h1 class="text-capitalize text-center">Search Employee</h1>
        <form method="post" asp-controller="Admin" asp-action="SearchEmployee" id="SearchForm">
            <div class="mb-3">
                <label class="form-label" name="id">Employee ID</label>
                <input type="number" class="form-control" required name="id">
            </div>
            <div class=" = text-center w-100 mt-2">
                <button onclick="Search()" type="button" class="btn btn-primary w-75">Search</button>
            </div>
        </form>
    </div>
    <div class="container-fluid">
        <div id="result">

        </div>
    </div>
</div>

<script type="text/javascript">
    function Search() {
        var data = $("#SearchForm").serialize();
        console.log(data);
        $.ajax({
            type: 'POST',
            url: '/Admin/SearchEmployee',
            data: data,
            success: function (response) {
                $("#result").html(response);
            },
            error: function () {
                alert('Failed to receive the Data');
                console.log('Failed ');
            }
        })
    }
</script>