@model CardModelLeft
<a asp-controller="@Model.Controller" asp-action="@Model.Action">
<div class="card ontouch">
    <div class="card-content">
    <div class="card-body">
        <div class="media d-flex">
        <div class="media-body text-left">
            <h3 class="primary">@Model.Counter</h3>
            <span>@Model.Tag</span>
        </div>
        <div class="align-self-center">
            <i class="@Model.Icon font-large-2 float-right"></i>
        </div>
        </div>
        <div class="progress mt-1 mb-0" style="height: 7px;">
            <div class="progress-bar bg-primary" role="progressbar" style="width: @Model.Volume%" aria-valuenow="@Model.Volume" aria-valuemin="0" aria-valuemax="100"></div>
        </div>
    </div>
    </div>
</div>
</a>