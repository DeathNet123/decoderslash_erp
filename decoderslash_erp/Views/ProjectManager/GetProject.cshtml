@{
    ViewData["Title"] = "Project Details";
}
@model List<Project>
<div class="list-group">
        @{
            <h2 class="text-center text-danger">Project List</h2>

            @if(Model.Count == 0)
            {
                <h1 class="text-center text-info">Woah Empty List</h1>
                <p>
                Good work champ you have done it all.
                </P>    
            }
            foreach(Project task in @Model)
            {
                <a asp-action="GetProjDetails" asp-controller="ProjectManager" asp-route-id="@task.ID" class="list-group-item list-group-item-action flex-column align-items-start">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">@task.Name</h5>
                        <small>Click on it to See Details</small>
                    </div>
                </a>
            }
        }
 </div>