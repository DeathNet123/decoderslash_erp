@{
    ViewData["Title"] = "Team Details";
}
@model List<Team>
<div class="list-group">
        @{
            <h2 class="text-center text-danger">Team List</h2>

            @if(Model.Count == 0)
            {
                <h1 class="text-center text-info">Woah Empty List</h1>
                <p>
                You need to be good Project Manager
                </P>    
            }
            foreach(Team task in @Model)
            {
                <div asp-action="GetTeamDetails" asp-controller="ProjectManager" asp-route-id="@task.ID" class="list-group-item list-group-item-action flex-column align-items-start">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">ID: @task.ID  Name : @task.TeamName</h5>
                    </div>
                </div>
            }
        }
 </div>